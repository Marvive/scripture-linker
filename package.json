{
    "name": "scripture-linker",
    "version": "1.0.0",
    "description": "Scan notes for Bible references and link them to Logos Bible Software and Bolls Bible",
    "main": "main.js",
    "scripts": {
        "dev": "node esbuild.config.mjs",
        "build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
        "test": "jest",
        "test:coverage": "jest --coverage",
        "version": "node version-bump.mjs && git add manifest.json versions.json"
    },
    "keywords": [
        "obsidian",
        "plugin",
        "bible",
        "scripture",
        "logos"
    ],
    "author": "Michael Marvive",
    "license": "MIT",
    "devDependencies": {
        "@types/jest": "^30.0.0",
        "@types/node": "^16.11.6",
        "@typescript-eslint/parser": "^8.54.0",
        "builtin-modules": "^3.3.0",
        "esbuild": "0.17.3",
        "eslint": "^9.39.2",
        "eslint-plugin-obsidianmd": "^0.1.9",
        "jest": "^30.2.0",
        "obsidian": "latest",
        "ts-jest": "^29.4.6",
        "tslib": "2.4.0",
        "typescript": "^5.9.3"
    }
}
